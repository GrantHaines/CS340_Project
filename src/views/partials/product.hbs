<div class="product" onclick="location.href='specificProduct/{{productID}}'">
    <div class="product-content">
        <p class="product-name centeredText">
            {{productName}}
        </p>
        <p class="product-description">
            <span class="product-info">Category:</span> {{category}}
        </p>
        <p class="product-description">
            <span class="product-info">Supplier:</span> {{supplierName}}
        </p>
        <p class="product-description">
            <span class="product-info">Description:</span> {{description}}
        </p>
        <p class="product-description">
            <span class="product-info">Price:</span> ${{price}}
        </p>
    </div>
</div>
