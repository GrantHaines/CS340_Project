{{#unless username}}
<h1 class="centeredText">Sorry, you have to log in to access this page.</h1>
{{/unless}}
{{#if username}}
    <h1 class="centeredText">Welcome, {{firstName}} {{lastName}}</h1>
    {{#if cart}}
    <h2 class="centeredText">Your Cart:</h2>

    {{/if}}
    {{#if order}}
    <h2 class="centeredText">Your Past Orders:</h2>

    <div id="order-container">
        {{#each order}}
        <div class="order">
            <div class="orderTop">
                <p>Purchased: {{this.datePurchased}}</p>
                <p>Cost: ${{this.totalCost}}</p>
            </div>
            <div>
                {{#each orderItems}}
                <div>
                    <p>{{productName}}: {{itemsOrdered}} ordered</p>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
{{/if}}